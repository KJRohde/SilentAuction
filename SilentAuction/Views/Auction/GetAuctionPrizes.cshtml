@model IEnumerable<SilentAuction.Models.AuctionPrize>
@{
    ViewBag.Title = "GetAuctionPrizes";
}
<h2>Minimum Bid Available</h2>


<table class="table">
    <tr>
        <th>
            Item Name
        </th>
        <th>
            Description
        </th>
        <th>
            Item Value
        </th>
        <th>
            Minimum Bid
        </th>
        <th>
            Current Top Bid
        </th>
        <th>
            Bid Increment
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(m => m.CurrentBid == 0).ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumBid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentBid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidIncrement)
            </td>
        </tr>
    }
</table>
<br />
<br />
<h2>Items With Bids</h2>

<table class="table">
    <tr>
        <th>
            Item Name
        </th>
        <th>
            Description
        </th>
        <th>
            Item Value
        </th>
        <th>
            Minimum Bid
        </th>
        <th>
            Current Top Bid
        </th>
        <th>
            Bid Increment
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(m => m.CurrentBid > 0).ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumBid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentBid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidIncrement)
            </td>
        </tr>
    }
</table>