@model IEnumerable<SilentAuction.Models.Raffle>
@{
    ViewBag.Title = "CompletedRaffles";
}
<h2>Completed Raffles</h2>

<table class="table">
    <tr>
        <th>
            Day
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th>
            Event
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Details", "CompletedIndex", "Raffle", new { id = item.RaffleId }, null)
            </td>
        </tr>
    }
</table>