
@model SilentAuction.Models.ViewModel
@{
    ViewBag.Title = "GetTransactions";
}
<h2>Pending Transactions</h2>
<br />
<table class="table">
    <tr>
        <th>
            Description
        </th>
        <th>
            Value
        </th>
        <th>
            Participant
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Transactions.Where(m => m.Paid == false).ToList())
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Money)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Participant.FirstName) @Html.DisplayFor(modelItem => item.Participant.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Participant.EmailAddress)
    </td>
    @if (User.IsInRole("Participant"))
    {
        <td>
            @Html.ActionLink("Pay", "Pay", new { id = item.TransactionId })
        </td>
    }
</tr>
    }
</table>
<br />
<br />
<h2>Completed Transactions</h2>
<br />
<table class="table">
    <tr>
        <th>
            Description
        </th>
        <th>
            Value
        </th>
        <th>
            Participant
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Transactions.Where(m => m.Paid == true).ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Participant.FirstName)  @Html.DisplayFor(modelItem => item.Participant.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Participant.EmailAddress)
            </td>
        </tr>
    }
</table>