@model SilentAuction.Models.RafflePrize
@{
    ViewBag.Title = "AddTickets";
}

<h2>Add Tickets</h2>

<div>
    <h4>@Html.DisplayFor(Model => Model.Name)</h4>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>
    </dl>
</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RafflePrizeId)
    @Html.HiddenFor(model => model.RaffleId)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.Category)
    @Html.HiddenFor(model => model.Value)
    @Html.HiddenFor(model => model.WinnerId)

    <div class="form-horizontal">
        <p>How many tickets would you like to enter to this prize?</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CurrentTickets, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CurrentTickets, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="AddTickets" class="btn btn-default" /> ||
            @Html.ActionLink("Home", "Index", "Participant")
        </div>
    </div>
}

